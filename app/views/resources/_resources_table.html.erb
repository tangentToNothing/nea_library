<script>
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= @tabletitle %></h4>
      </div>
      <div class="panel-body">
        <table id="example" class="cell-border" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Categories</th>


            <th>Organization</th>

            <th>Focus</th>


          </tr>
          </thead>
          <tbody>
          <% @resources.each do |resource| %>


              <tr>

                <td><%= resource.id %></td>
                <td>
                <% if !resource.series_id.nil? %>
                      <small class="color: orange"><%= resource.series.name %></small><br>
                      <% end %>
                  <%= link_to resource do %><%= resource.title %><% end %></td>
                <td>
                  <em>Technical:</em> <% resource.technicalareas.each do |ta| %>
                      <%= ta.name %>
                  <% end %><br>
                  <em>Targets:</em>  <% resource.targetgroups.each do |tg| %>
                      <%= tg.name %>
                  <% end %>

                      </td>

                <td><%#= resource.orgname %><BR>
                <small class="color: orange"><% if !resource.organization_id.nil? %><%= resource.organization.name %><% end %></small>
                </td>


                <td>
                  <% if resource.focus_women == true %>
                      <button type="button" class="btn btn-primary">Women</button>
                  <% end %>
                  <% if resource.focus_youth == true %>
                      <button type="button" class="btn btn-primary">Youth</button>
                  <% end %>
</td>

              </tr>
          <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- END DATATABLE 1 -->