<h1>Listing Posts</h1>
<table id="example" class="hover" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Value</th>
      <th>Start</th>
      <th>End</th>

      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post do %><%= post.title %><% end %></td>
        <td><%= post.description %></td>
        <td><%= post.post_type_humanize %></td>
        <td><%= post.post_value %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>

        <!--<td><%#= link_to 'Show', post %></td>
        <td><%#= link_to 'Edit', edit_post_path(post) %></td>
        <td><%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<script>
    $(document).ready(function() {
        $('#example').DataTable();
    } );
</script>