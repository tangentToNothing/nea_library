<p id="notice"><%= notice %></p>

<h1>Listing Site Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Imageable type</th>
      <th>Imageable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @site_images.each do |site_image| %>
      <tr>
        <td><%= site_image.name %></td>
        <td><%= site_image.imageable_type %></td>
        <td><%= site_image.imageable_id %></td>
        <td><%= link_to 'Show', site_image %></td>
        <td><%= link_to 'Edit', edit_site_image_path(site_image) %></td>
        <td><%= link_to 'Destroy', site_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

